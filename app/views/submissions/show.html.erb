<p id="notice"><%= notice %></p>

<p>
  <b>Title:</b>
  <%= @submission.title %>
</p>

<p>
  <b>Authors:</b>
  <%= @submission.authors %>
</p>

<p>
  <b>Institutions:</b>
  <%= @submission.institutions %>
</p>

<p>
  <b>Body:</b>
  <%= @submission.body %>
</p>

<% if @submission.user_id == current_user %>
  <%= link_to 'Edit', edit_submission_path(@submission) %> | 
  <%= link_to 'Destroy', @submission, :confirm => 'Are you sure?', :method => :delete %> |
<% end %>
<%= link_to 'Back', submissions_path %>
